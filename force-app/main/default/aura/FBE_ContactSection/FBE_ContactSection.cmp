<aura:component controller="FBE_LeadConvertCtrl" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="contactList" type="Object" />
    <aura:attribute name="accountId" type="String" />
    <aura:attribute name="contactId" type="String" />   
    
    <lightning:recordEditForm aura:id="recordEditForm" objectApiName="Lead">
        <div class="slds-p-around_small">
            <lightning:inputField fieldName="FBE_Contact__c" aura:id="lookupContId" onchange="{!c.selectedlookupCont}"/>
        </div>
    </lightning:recordEditForm>
    
    <br/>
    <aura:if isTrue ="{!v.contactList.length == 0}">
        <div style="font-weight: bold;">
            No Related Contacts Found
        </div>
        
        <aura:set attribute="else">
            <ui:scrollerWrapper class="scrollerSize">
                <form name="myForm">
                    <fieldset class="slds-form-element">
                        <legend class="slds-form-element__legend slds-form-element__label"></legend>
                        <div class="slds-form-element__control">
                            <div>
                                <div class="slds-grid slds-wrap">
                                    <aura:iteration items="{!v.contactList}" var="item" indexVar="indexVal">
                                        <div class="slds-col slds-size_1-of-4 slds-p-around_small">                    
                                            
                                            <div class="slds-box slds-box_x-small">
                                                <label class="slds-radio">
                                                    <input type="radio" name="indexVal" value="{!item.Id}" onchange="{!c.selectedRadio}" id="radioId"/>
                                                    <span class="slds-radio--faux" ></span>
                                                    <span class="slds-form-element__label">
                                                        <lightning:card title="{!item.Name}">
                                                            <p class="slds-p-horizontal_small slds-truncate">
                                                                First Name : {!item.FirstName}<br/>
                                                                Last Name : {!item.LastName}<br/>
                                                                Email : {!item.Email} <br/>
                                                                Account : {!item.Account.Name}
                                                            </p>
                                                        </lightning:card>
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                    </aura:iteration>
                                </div>  
                            </div>
                        </div>
                    </fieldset>
                </form>
            </ui:scrollerWrapper>
        </aura:set>
    </aura:if>
    <br/>
</aura:component>